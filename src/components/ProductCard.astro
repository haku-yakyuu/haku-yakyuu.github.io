---
const { product } = Astro.props;

// 安全機制：如果沒有商品資料，就不渲染
if (!product) return null;

// 安全機制：確保 tags 即使是 undefined 也能變成空陣列，防止報錯
const tags = product.solid_tags || [];
const isSoldOut = product.status === 'soldout';
---

<a href={`/product/${product.id}`} class="product-card">
  <div class="image-container">
    <img src={product.image} alt={product.name} loading="lazy" />
    {isSoldOut && <div class="sold-out-badge">SOLD OUT</div>}
  </div>
  <div class="info">
    <h3 class="name">{product.name}</h3>
    <div class="meta">
      <span class="price">NT$ {product.price}</span>
      <div class="tags">
        {tags.slice(0, 2).map((tag: string) => (
          <span class="tag">#{tag}</span>
        ))}
      </div>
    </div>
  </div>
</a>

<style>
  .product-card {
    display: block;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }
  .product-card:hover { transform: translateY(-5px); }

  .image-container {
    position: relative;
    aspect-ratio: 1 / 1;
    background: var(--placeholder-bg);
    overflow: hidden;
    margin-bottom: 15px;
  }
  .image-container img {
    width: 100%; height: 100%; object-fit: cover;
    transition: transform 0.5s;
  }
  .product-card:hover .image-container img { transform: scale(1.05); }

  .sold-out-badge {
    position: absolute;
    top: 10px; right: 10px;
    background: var(--haku-ink);
    color: var(--haku-paper);
    padding: 5px 10px;
    font-size: 0.8rem;
    font-weight: 700;
  }

  .name {
    font-family: 'Noto Sans TC', sans-serif;
    font-size: 1rem;
    font-weight: 700;
    margin: 0 0 5px 0;
    line-height: 1.4;
    color: var(--haku-ink);
  }

  .meta {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-family: 'Montserrat', sans-serif;
  }

  .price { font-weight: 700; font-size: 1rem; }
  
  .tags { display: flex; gap: 5px; }
  .tag { 
    font-size: 0.7rem; 
    color: #888; 
    background: #f0f0f0; 
    padding: 2px 6px; 
    border-radius: 4px; 
  }
</style>
