---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Noto+Sans+TC:wght@400;700&family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet">
	</head>
	<body class="bg-[var(--haku-paper)] text-[var(--haku-ink)]">
		<slot />
	</body>
</html>

<style is:global>
    :root {
		--haku-ink: #3E2723;
		--haku-paper: #F5F1E8;
	}
    html, body { 
        height: 100%; 
        margin: 0; 
        background: var(--haku-paper);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>
