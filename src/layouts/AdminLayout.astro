---
import '../styles/global.css';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		
		<!-- PWA Meta Tags -->
		<link rel="manifest" href="/admin-manifest.json" />
		<meta name="theme-color" content="#3E2723" />
		<meta name="apple-mobile-web-app-capable" content="yes" />
		<meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
		<meta name="apple-mobile-web-app-title" content="HAKU Admin" />
		<link rel="apple-touch-icon" href="/favicon.png" />

		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Noto+Sans+TC:wght@400;700&family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet">
		
		<script is:inline>
			if ('serviceWorker' in navigator) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register('/admin-sw.js')
						.then(reg => console.log('Admin SW registered:', reg))
						.catch(err => console.log('Admin SW failed:', err));
				});
			}
		</script>
	</head>
	<body class="bg-[var(--haku-paper)] text-[var(--haku-ink)]">
		<slot />
	</body>
</html>

<style is:global>
    :root {
		--haku-ink: #3E2723;
		--haku-paper: #F5F1E8;
	}
    html, body { 
        height: 100%; 
        margin: 0; 
        background: var(--haku-paper);
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }
</style>
