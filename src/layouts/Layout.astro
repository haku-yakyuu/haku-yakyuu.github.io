---
interface Props {
	title: string;
	config?: any;
	image?: string;
}

const { title, config, image } = Astro.props;
const DEFAULT_VERIFICATION = "RSCsK8X-OoCTr2uKZ2oKz-QbY1SjZWYLZRIfQz9NKWY";
const googleVerification = config?.google_verification || DEFAULT_VERIFICATION;
const siteDescription = config?.announcement || "HAKU 職人眼光的棒球選品";
const socialImage = image || new URL("/default-og.jpg", Astro.url.origin).toString();
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
		<meta name="description" content={siteDescription} />
		<meta property="og:image" content={socialImage} />
		<meta name="google-site-verification" content={googleVerification} />
		
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700;900&family=Noto+Sans+TC:wght@400;700&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				--haku-ink: #3E2723;
				--haku-paper: #F5F1E8;
				--haku-accent: #DCD7CE;
			}
			* { box-sizing: border-box; }
			html, body { 
				margin: 0; padding: 0; 
				overflow-x: hidden; /* 防止版面溢出 */
				background: var(--haku-paper);
				color: var(--haku-ink);
				font-family: 'Noto Sans TC', sans-serif;
			}
			img { max-width: 100%; height: auto; display: block; }
			.container { 
				max-width: 1200px; 
				margin: 0 auto; 
				padding: 0 20px; 
			}
		</style>
	</body>
</html>
