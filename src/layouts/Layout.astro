---
import Sidebar from '../components/Sidebar.astro';
const { title, siteTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="zh-TW">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | {siteTitle || 'HAKU'}</title>
    <!-- HAKU V5 字體與 Icons -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@900&family=Noto+Sans+TC:wght@400;700&family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&display=swap" rel="stylesheet">
</head>
<body>
    <div class="app-container">
        <Sidebar siteTitle={siteTitle} />
        <main class="main-content">
            <slot />
        </main>
    </div>
</body>
</html>

<style is:global>
    /* --- HAKU V5 Design System --- */
    :root {
        --haku-ink: #3E2723;
        --haku-paper: #F5F1E8;
        --placeholder-bg: #DCD7CE;
        --placeholder-icon: rgba(62, 39, 35, 0.3);
        --sidebar-width: 260px;
    }

    body {
        margin: 0;
        background-color: #EEE; /* 你的背景色 */
        font-family: 'Noto Sans TC', sans-serif;
        color: var(--haku-ink);
    }

    /* 佈局容器 */
    .app-container { display: flex; min-height: 100vh; }
    .main-content { 
        flex: 1; 
        padding: 40px; 
        margin-left: var(--sidebar-width); 
        max-width: 1400px; /* 限制最大寬度保持設計感 */
    }

    /* --- 標題樣式移植 --- */
    h1, h2 { font-family: 'Montserrat', sans-serif; color: var(--haku-ink); }
    
    h2 { 
        font-size: 1.2rem; 
        border-bottom: 3px solid var(--haku-ink); 
        padding-bottom: 15px; 
        margin: 40px 0 30px 0; 
    }
    
    h2 span { 
        font-size: 0.8rem; 
        font-weight: 400; 
        opacity: 0.7; 
        font-family: 'Noto Sans TC'; 
        margin-left: 10px; 
    }

    a { text-decoration: none; color: inherit; }

    /* RWD */
    @media (max-width: 768px) {
        .app-container { flex-direction: column; }
        .main-content { margin-left: 0; padding: 20px; }
    }
</style>
