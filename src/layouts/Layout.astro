---
interface Props {
	title: string;
	config?: any;
}

const { title, config } = Astro.props;

// --- 驗證碼邏輯：優先讀取試算表，若無則使用你提供的這串「寫死備用」 ---
const DEFAULT_VERIFICATION = "RSCsK8X-OoCTr2uKZ2oKz-QbY1SjZWYLZRIfQz9NKWY";
const googleVerification = config?.google_verification || DEFAULT_VERIFICATION;
---

<!doctype html>
<html lang="zh-Hant">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={config?.announcement || "HAKU 職人眼光的棒球選品"} />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		{/* 搜尋引擎驗證 (優先使用變數) */}
		<meta name="google-site-verification" content={googleVerification} />
		
		<title>{title}</title>

		{/* Google Fonts & Icons */}
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700;900&family=Noto+Sans+TC:wght@400;700;900&display=swap" rel="stylesheet">
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
	</head>
	<body>
		<slot />
		<style is:global>
			:root {
				--haku-ink: #3E2723;
				--haku-paper: #F5F1E8;
				--haku-accent: #DCD7CE;
				--placeholder-bg: #E0E0E0;
			}
			html {
				font-family: 'Noto Sans TC', sans-serif;
				background: var(--haku-paper);
				color: var(--haku-ink);
			}
			body { margin: 0; padding: 0; }
		</style>
	</body>
</html>
