---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { fetchProducts } from '../utils/api';

const { products, config, error } = await fetchProducts();

// 篩選 active 且 isFeatured
const featuredProducts = products.filter((p) => 
  p.status === 'active' && (p.isFeatured === true || p.isFeatured === "true")
);

// 分組
const grouped = featuredProducts.reduce((acc, p) => {
  const cat = p.category || "其他";
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(p);
  return acc;
}, {});
const categories = Object.keys(grouped);

// 安全的標題邏輯
const pageTitle = `${config?.site_title || "HAKU"} | 首頁`;
---

<Layout title={pageTitle}>
  
  <header class="hero">
    <h1>HAKU</h1>
    <p>從球場的紅土到收藏盒的溫度。HAKU 為您挑選每一顆承載歷史與紀錄的棒球，延續那份不滅的野球魂。</p>
    <a href="/shop" class="hero-btn">探索選品</a>
  </header>

  <main class="container">
    {error && <p class="msg">連線異常，無法載入商品。</p>}
    
    {categories.map(cat => (
      <section>
        <div class="sec-header">
          <h2>{cat} <span>FEATURED</span></h2>
        </div>
        <div class="grid-v">
          {grouped[cat].map((p) => <ProductCard product={p} config={config || {}} />)}
        </div>
      </section>
    ))}
  </main>

</Layout>

<style>
  .hero {
    height: 70vh; display: flex; flex-direction: column; justify-content: center; align-items: center;
    text-align: center; background-color: var(--haku-ink); color: var(--haku-paper); padding: 0 10%;
  }
  .hero h1 { font-family: 'Montserrat', sans-serif; font-size: 4rem; margin: 0; line-height: 1; }
  .hero p { max-width: 600px; margin: 24px 0; font-size: 1.1rem; opacity: 0.8; letter-spacing: 1px; }
  .hero-btn { border: 2px solid var(--haku-paper); padding: 12px 40px; font-weight: 700; transition: 0.3s; margin-top: 10px; }
  .hero-btn:hover { background: var(--haku-paper); color: var(--haku-ink); }
  
  .container { max-width: 1400px; margin: 0 auto; padding: 0 5%; }
  section { margin-top: 120px; }
  .sec-header { border-bottom: 3px solid var(--haku-ink); margin-bottom: 40px; padding-bottom: 10px; }
  .sec-header h2 { font-family: 'Montserrat', sans-serif; font-size: 1.5rem; margin: 0; }
  .sec-header span { font-size: 0.9rem; opacity: 0.6; font-family: 'Noto Sans TC'; margin-left: 10px; font-weight: 400; }
  .msg { text-align: center; padding: 40px; }
  .grid-v { display: grid; gap: 20px; grid-template-columns: repeat(2, 1fr); }
  @media (min-width: 1024px) { .grid-v { grid-template-columns: repeat(4, 1fr); gap: 30px; } }
</style>
