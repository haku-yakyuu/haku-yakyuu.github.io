---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ConfigService from '../../services/configService';

export async function getStaticPaths() {
  const { products } = await ConfigService.fetchData();
  return products.map((product) => ({
    params: { id: product.id },
    props: { product },
  }));
}

const { product } = Astro.props;
const { config } = await ConfigService.fetchData();

// 設定頁面標題
const pageTitle = `${product.name} | HAKU`;
// 取得商品圖片 (如果有的話)
const productImage = product.image || "";
---

<Layout title={pageTitle} config={config} image={productImage}>
  <Header currentPath="shop" config={config} />
  
  <main class="product-detail-container">
    <div class="product-image-box">
      {product.image ? (
        <img src={product.image} alt={product.name} transition:name={`image-${product.id}`} />
      ) : (
        <div class="placeholder">No Image</div>
      )}
    </div>

    <div class="product-info-box">
      <h1 class="title">{product.name}</h1>
      <p class="price">NT$ {product.price}</p>
      
      <div class="divider"></div>

      <div class="description" set:html={product.description ? product.description.replace(/\n/g, '<br/>') : '暫無商品描述'}></div>
      
      <div class="action-area">
          {/* 這裡未來可以加入購買按鈕或連結 */}
           <a href={product.link || "#"} target="_blank" class={`buy-btn ${product.status === 'soldout' ? 'disabled' : ''}`}>
            {product.status === 'soldout' ? '已售完' : '前往購買頁面'}
          </a>
      </div>
       <a href="/shop" class="back-link">← 返回商品列表</a>
    </div>
  </main>

  <Footer config={config} />
</Layout>

<style>
  .product-detail-container {
    max-width: 1000px;
    margin: 40px auto 80px;
    padding: 0 20px;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
  }

  @media (min-width: 768px) {
    .product-detail-container {
      grid-template-columns: 1fr 1fr;
      align-items: start;
      margin-top: 80px;
    }
  }

  .product-image-box {
    aspect-ratio: 1 / 1;
    background: var(--placeholder-bg);
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid var(--haku-ink);
  }

  .product-image-box img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info-box {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .title {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.8rem;
    margin: 0;
    font-weight: 700;
  }

  .price {
    font-family: 'Montserrat', sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--haku-ink);
    margin: 0;
  }

  .divider {
    height: 2px;
    background-color: var(--haku-ink);
    width: 50px;
  }

  .description {
    line-height: 1.8;
    color: #5D4037;
    white-space: pre-wrap;
  }

  .buy-btn {
    display: inline-block;
    background: var(--haku-ink);
    color: var(--haku-paper);
    padding: 15px 30px;
    text-decoration: none;
    font-weight: 700;
    border-radius: 4px;
    text-align: center;
    transition: opacity 0.2s;
  }
  .buy-btn:hover { opacity: 0.9; }
  .buy-btn.disabled {
    background: #999;
    cursor: not-allowed;
    pointer-events: none;
  }

  .back-link {
    display: inline-block;
    margin-top: 20px;
    color: var(--haku-ink);
    text-decoration: none;
    font-weight: 700;
  }
</style>
