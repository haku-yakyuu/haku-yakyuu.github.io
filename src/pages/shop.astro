---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { fetchProducts } from '../utils/api';

const { products, config, error } = await fetchProducts();
const activeProducts = products.filter((p) => p.status === 'active');

// 1. 抓出所有不重複分類
const categories = [...new Set(activeProducts.map(p => p.category))];
const totalCount = activeProducts.length;

const pageTitle = `所有選品 | ${config?.site_title || "HAKU"}`;
---

<Layout title={pageTitle}>
  <div class="shop-wrapper">
    
    {/* --- 左側篩選欄 (電腦版顯示) --- */}
    <aside class="shop-sidebar">
      <div class="filter-group">
        <h3>商品分類</h3>
        <ul>
          {/* 全部商品按鈕 */}
          <li>
            <button class="filter-btn active" data-target="all">
              所有商品 <span class="count">({totalCount})</span>
            </button>
          </li>
          
          {/* 動態分類按鈕 */}
          {categories.map(cat => {
            const count = activeProducts.filter(p => p.category === cat).length;
            return (
              <li>
                <button class="filter-btn" data-target={cat}>
                  {cat} <span class="count">({count})</span>
                </button>
              </li>
            );
          })}
        </ul>
      </div>
    </aside>

    {/* --- 右側主要內容 --- */}
    <main class="shop-content">
      
      {/* 手機版標題 (電腦版會被側邊欄取代，所以可以在這裡保留或隱藏，這邊保留作為頁面標題) */}
      <div class="page-header">
         <h2>ALL PRODUCTS</h2>
      </div>

      {error && <p style="text-align:center; padding:50px;">載入失敗。</p>}

      {categories.map(cat => {
        const catProducts = activeProducts.filter(p => p.category === cat);
        const verticalItems = catProducts.filter(p => p.layout === 'vertical');
        const horizontalItems = catProducts.filter(p => p.layout === 'horizontal');
        const noImageItems = catProducts.filter(p => p.layout === 'no_image');

        // 給每個區塊加上 class="cat-section" 和 data-category，方便 JS 控制
        return (
          <div class="cat-section" data-category={cat}>
            <h3 class="cat-header">{cat} <span>CATEGORY</span></h3>

            {verticalItems.length > 0 && (
              <div class="p-grid grid-vertical">
                {verticalItems.map(p => <ProductCard product={p} config={config || {}} />)}
              </div>
            )}

            {horizontalItems.length > 0 && (
              <div class="p-grid grid-horizontal-img">
                {horizontalItems.map(p => <ProductCard product={p} config={config || {}} />)}
              </div>
            )}

            {noImageItems.length > 0 && (
              <div class="p-grid grid-horizontal-noimg">
                {noImageItems.map(p => <ProductCard product={p} config={config || {}} />)}
              </div>
            )}
          </div>
        )
      })}
      
      {/* 查無結果時顯示 (當篩選後隱藏所有項目時) */}
      <div id="no-result" style="display:none; text-align:center; padding: 50px; opacity: 0.5;">
        沒有符合條件的商品
      </div>

    </main>
  </div>
</Layout>

<script>
  // 簡單的篩選邏輯
  document.addEventListener('astro:page-load', () => {
    const btns = document.querySelectorAll('.filter-btn');
    const sections = document.querySelectorAll('.cat-section');
    const noResult = document.getElementById('no-result');

    btns.forEach(btn => {
      btn.addEventListener('click', () => {
        // 1. 切換按鈕樣式
        btns.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        const target = btn.getAttribute('data-target');
        let hasVisible = false;

        // 2. 顯示或隱藏區塊
        sections.forEach(sec => {
          const cat = sec.getAttribute('data-category');
          if (target === 'all' || target === cat) {
            (sec as HTMLElement).style.display = 'block';
            hasVisible = true;
          } else {
            (sec as HTMLElement).style.display = 'none';
          }
        });

        // 3. 無結果處理
        if (noResult) noResult.style.display = hasVisible ? 'none' : 'block';
        
        // 4. 回到頂部 (體驗優化)
        window.scrollTo({ top: 0, behavior: 'smooth' });
      });
    });
  });
</script>

<style>
  /* --- 佈局架構 --- */
  .shop-wrapper {
    max-width: 1400px; margin: 0 auto; padding: 40px 20px;
    display: block; /* 手機版預設 */
  }

  /* 側邊欄：預設隱藏 (手機) */
  .shop-sidebar { display: none; margin-bottom: 40px; }

  /* 電腦版樣式 */
  @media (min-width: 1024px) {
    .shop-wrapper { display: flex; gap: 60px; padding-top: 60px; align-items: flex-start; }
    
    .shop-sidebar { 
      display: block; 
      width: 220px; 
      flex-shrink: 0; 
      position: sticky; /* 讓它捲動時黏在上面 */
      top: 100px; 
    }
    
    .shop-content { flex-grow: 1; min-width: 0; /* 防止 grid 撐爆 flex */ }
  }

  /* --- 篩選按鈕樣式 --- */
  .filter-group h3 {
    font-family: 'Montserrat', sans-serif; font-size: 1.1rem; 
    border-bottom: 2px solid var(--haku-ink); padding-bottom: 10px; margin-bottom: 20px;
  }
  .filter-group ul { list-style: none; padding: 0; }
  .filter-group li { margin-bottom: 12px; }
  
  .filter-btn {
    background: none; border: none; padding: 0; cursor: pointer;
    font-family: 'Noto Sans TC', sans-serif; font-size: 0.95rem;
    color: var(--haku-ink); opacity: 0.6; transition: 0.3s;
    text-align: left; display: flex; width: 100%; justify-content: space-between;
  }
  .filter-btn:hover { opacity: 1; }
  
  .filter-btn.active { 
    opacity: 1; font-weight: 700; 
    padding-left: 10px; border-left: 3px solid var(--haku-ink); 
  }
  
  .count { font-size: 0.8rem; opacity: 0.5; font-weight: 400; }

  /* --- 右側內容樣式 (保留原本的 Grid) --- */
  .page-header h2 { 
    font-family: 'Montserrat', sans-serif; font-size: 1.5rem; 
    border-bottom: 3px solid var(--haku-ink); padding-bottom: 10px; margin-bottom: 40px; margin-top: 0;
  }
  
  .cat-header { 
    font-family: 'Montserrat', sans-serif; font-size: 1.2rem; 
    border-bottom: 1px solid rgba(62,39,35,0.2); padding-bottom: 10px; margin: 60px 0 30px 0; 
  }
  .cat-section:first-child .cat-header { margin-top: 0; }
  
  .cat-header span { font-size: 0.8rem; font-weight: 400; opacity: 0.7; font-family: 'Noto Sans TC'; margin-left: 10px; }

  /* Grid System (與之前一致) */
  .p-grid { display: grid; gap: 20px; margin-bottom: 50px; }
  
  .grid-vertical { grid-template-columns: repeat(2, 1fr); }
  @media (min-width: 1024px) { .grid-vertical { grid-template-columns: repeat(4, 1fr); gap: 30px; } }
  
  .grid-horizontal-img { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-img { grid-template-columns: repeat(3, 1fr); gap: 30px; } }
  
  .grid-horizontal-noimg { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-noimg { grid-template-columns: repeat(4, 1fr); gap: 20px; } }
</style>
