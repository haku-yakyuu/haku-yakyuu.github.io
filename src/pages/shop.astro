---
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { fetchProducts } from '../utils/api';

const { products, config, error } = await fetchProducts();
const activeProducts = products.filter((p) => p.status === 'active');

// 1. 抓出所有不重複分類
const categories = [...new Set(activeProducts.map(p => p.category))];
const pageTitle = `所有選品 | ${config?.site_title || "HAKU"}`;
---

<Layout title={pageTitle}>
  <main class="container">
    
    {error && <p style="text-align:center; padding:50px;">載入失敗。</p>}

    {/* 依照分類迴圈 */}
    {categories.map(cat => {
      // 抓出該分類下所有商品
      const catProducts = activeProducts.filter(p => p.category === cat);
      
      // 再細分三種版型
      const verticalItems = catProducts.filter(p => p.layout === 'vertical');
      const horizontalItems = catProducts.filter(p => p.layout === 'horizontal');
      const noImageItems = catProducts.filter(p => p.layout === 'no_image');

      return (
        <section>
          <h2>{cat} <span>CATEGORY</span></h2>

          {/* 1. Vertical Grid */}
          {verticalItems.length > 0 && (
            <div class="p-grid grid-vertical">
              {verticalItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}

          {/* 2. Horizontal Image Grid */}
          {horizontalItems.length > 0 && (
            <div class="p-grid grid-horizontal-img">
              {horizontalItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}

          {/* 3. Horizontal No Image Grid */}
          {noImageItems.length > 0 && (
            <div class="p-grid grid-horizontal-noimg">
              {noImageItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}
        </section>
      )
    })}

  </main>
</Layout>

<style>
  .container { max-width: 1400px; margin: 0 auto; padding: 60px 20px; }
  
  /* 標題樣式 */
  h2 { font-family: 'Montserrat', sans-serif; font-size: 1.2rem; border-bottom: 3px solid var(--haku-ink); padding-bottom: 15px; margin: 80px 0 30px 0; }
  h2:first-of-type { margin-top: 0; }
  h2 span { font-size: 0.8rem; font-weight: 400; opacity: 0.7; font-family: 'Noto Sans TC'; margin-left: 10px; }

  /* --- 移植你的網格系統 (Grid System) --- */
  .p-grid { display: grid; gap: 20px; margin-bottom: 50px; }
  
  /* Vertical: 手機2欄 / 桌機4欄 */
  .grid-vertical { grid-template-columns: repeat(2, 1fr); }
  @media (min-width: 1024px) { .grid-vertical { grid-template-columns: repeat(4, 1fr); gap: 30px; } }
  
  /* Horizontal Img: 手機1欄 / 桌機3欄 */
  .grid-horizontal-img { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-img { grid-template-columns: repeat(3, 1fr); gap: 30px; } }
  
  /* Horizontal NoImg: 手機1欄 / 桌機4欄 */
  .grid-horizontal-noimg { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-noimg { grid-template-columns: repeat(4, 1fr); gap: 20px; } }
</style>
