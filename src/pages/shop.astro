---
// src/pages/shop.astro
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { fetchProducts } from '../utils/api';

const { products, config, error } = await fetchProducts();

// 權重設定
const styleWeight: Record<string, number> = { 'vertical': 1, 'horizontal': 2, 'no_image': 3 };

// 篩選 & 分組 & 排序
const activeProducts = products.filter((p:any) => p.status === 'active');
const grouped = activeProducts.reduce((acc: any, p: any) => {
  const cat = p.category || "其他";
  if (!acc[cat]) acc[cat] = [];
  acc[cat].push(p);
  return acc;
}, {});

// 每個分類內進行排序
Object.keys(grouped).forEach(cat => {
  grouped[cat].sort((a: any, b: any) => {
    return (styleWeight[a.layout] || 99) - (styleWeight[b.layout] || 99);
  });
});

const categories = Object.keys(grouped);
---

<Layout title="所有選品 | HAKU">
  <main class="container" style="padding-top: 60px;">
    
    <div class="sec-header">
       <h2>ALL PRODUCTS</h2>
    </div>

    {error && <p class="msg">載入失敗。</p>}

    {categories.map(cat => (
      <section>
        <h3 class="cat-title">{cat}</h3>
        <div class="grid-v">
          {grouped[cat].map((p:any) => <ProductCard product={p} config={config} />)}
        </div>
      </section>
    ))}
  </main>
</Layout>

<style>
  section { margin-bottom: 80px; }
  .sec-header { border-bottom: 3px solid var(--haku-ink); margin-bottom: 40px; padding-bottom: 10px; }
  .sec-header h2 { font-family: 'Montserrat', sans-serif; font-size: 1.5rem; margin: 0; }
  .cat-title { font-size: 1.2rem; margin-bottom: 20px; opacity: 0.7; border-left: 4px solid var(--haku-ink); padding-left: 10px; }
  .msg { text-align: center; }
</style>
