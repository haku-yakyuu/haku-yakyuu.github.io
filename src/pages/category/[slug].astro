---
import Layout from '../../layouts/Layout.astro';
import ProductCard from '../../components/ProductCard.astro';
import ShopSidebar from '../../components/ShopSidebar.astro';
import { fetchProducts } from '../../utils/api';

export async function getStaticPaths() {
  const { products } = await fetchProducts();
  const categories = [...new Set(products.map((p) => p.category).filter(Boolean))];
  return categories.map((cat) => ({
    params: { slug: cat },
    props: { categoryName: cat },
  }));
}

const { categoryName } = Astro.props;
const { products, config } = await fetchProducts();
const activeProducts = products.filter((p) => p.status === 'active');

// 準備給側邊欄的資料
const categories = [...new Set(activeProducts.map(p => p.category))];
const totalCount = activeProducts.length;

// 只取出當前分類的商品
const currentCatProducts = activeProducts.filter(p => p.category === categoryName);
const verticalItems = currentCatProducts.filter(p => p.layout === 'vertical');
const horizontalItems = currentCatProducts.filter(p => p.layout === 'horizontal');
const noImageItems = currentCatProducts.filter(p => p.layout === 'no_image');

const pageTitle = `${categoryName} | ${config?.site_title || 'HAKU'}`;
---

<Layout title={pageTitle}>
  <div class="shop-wrapper">
    
    {/* 側邊欄：傳入當前 categoryName 讓該按鈕亮起 */}
    <ShopSidebar 
      categories={categories} 
      activeCategory={categoryName} 
      totalCount={totalCount} 
      products={activeProducts} 
    />

    <main class="shop-content">
      <div class="page-header">
         <h2>{categoryName}</h2>
      </div>

      {currentCatProducts.length === 0 ? (
        <p class="msg">此分類目前沒有商品。</p>
      ) : (
        <>
          {verticalItems.length > 0 && (
            <div class="p-grid grid-vertical">
              {verticalItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}
          {horizontalItems.length > 0 && (
            <div class="p-grid grid-horizontal-img">
              {horizontalItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}
          {noImageItems.length > 0 && (
            <div class="p-grid grid-horizontal-noimg">
              {noImageItems.map(p => <ProductCard product={p} config={config || {}} />)}
            </div>
          )}
        </>
      )}
    </main>
  </div>
</Layout>

<style>
  /* 樣式與 shop.astro 完全共用，確保視覺體驗一致 */
  .shop-wrapper { max-width: 1400px; margin: 0 auto; padding: 40px 20px; display: block; }
  @media (min-width: 1024px) {
    .shop-wrapper { display: flex; gap: 60px; padding-top: 60px; align-items: flex-start; }
    .shop-content { flex-grow: 1; min-width: 0; }
  }

  .page-header h2 { font-family: 'Montserrat', sans-serif; font-size: 1.5rem; border-bottom: 3px solid var(--haku-ink); padding-bottom: 10px; margin-bottom: 40px; margin-top: 0; }
  
  .p-grid { display: grid; gap: 20px; margin-bottom: 50px; }
  .grid-vertical { grid-template-columns: repeat(2, 1fr); }
  @media (min-width: 1024px) { .grid-vertical { grid-template-columns: repeat(4, 1fr); gap: 30px; } }
  .grid-horizontal-img { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-img { grid-template-columns: repeat(3, 1fr); gap: 30px; } }
  .grid-horizontal-noimg { grid-template-columns: 1fr; }
  @media (min-width: 1024px) { .grid-horizontal-noimg { grid-template-columns: repeat(4, 1fr); gap: 20px; } }
  .msg { text-align: center; padding: 50px; opacity: 0.6; }
</style>
